{
  "name": "emudock",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "main": "src/main.js",
  "workspaces": ["app-frontend"],
  "scripts": {
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "npm run dev --workspace app-frontend",
    "dev:electron": "wait-on http-get://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron ./src/main.js",
    "build": "npm run build --workspace app-frontend",
    "start": "cross-env NODE_ENV=production electron ./src/main.js"
  },
  "dependencies": {
    "electron": "^28.3.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "wait-on": "^7.2.0"
  }
}
